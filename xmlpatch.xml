		<addnodes target="gameobjectdata.xml" query="/GameObjects/GameObject[@Category='Pony']/Minigames/@PlayActionSkipAgainCost"/>
		<op id="/=" value="2"/>
		<op id="ceil"/>
	</patch>
	
