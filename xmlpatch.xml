		<op id="=" value="1"/> <!-- I'm not sure whether this is better as 1 or 0. -->
		
		<clearqueries/>
		<addnodes target="gameobjectdata.xml" query="/GameObjects/GameObject[@Category='Clearable']/Respawn/@ChancePerHour"/>
		<op id="/=" value="10"/>
	</patch>
	
