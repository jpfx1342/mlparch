	<patch target="gameobjectdata.xml" query="/GameObjects/GameObject[@Category='Consumable']/Production/@Time" >
		<!--<op id="/=" value="10"/>-->
		<op id="sqrt"/> <!-- sqrt -->
		<op id="ceil" direct="true" sig="0.1"/> <!-- round up to nearest 10 -->
		<op id="ceil"/> <!-- force to integer value (sig==0 does this) -->
	</patch>
	
